<%= User.find(params[:id]).email%><br>
<%= User.find(params[:id]).password%><br>


<%= form_with model: @user do |form| %>
  <%= form.label :text_field, "User name:" %> 
  <%= form.text_field :username, placeholder: "cool user name" %><br/><br/>
  <%= form.label :text_field, "Email:" %> 
  <%= form.email_field :email, placeholder: "example@mail.com" %><br/><br/>
  <%= form.label :password, "Password:" %> 
  <%= form.password_field :password %><br/><br/>
  <%= form.submit "Submit" %>
<% end %>
